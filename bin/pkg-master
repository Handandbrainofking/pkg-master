#!/usr/bin/env node

const Chalk = require("chalk");
const Commander = require("commander");

const Package = require("../package");
const New = require("../lib/new");
const Public = require("../lib/public");

Commander
	.usage(Chalk.yellowBright("<command> [option]"))
	.version(Package.version, "-v, --version");
Commander
	.command("new")
	.alias("n")
	.description(Chalk.blueBright("创建模块"))
	.action(New);
Commander
	.command("public")
	.alias("p")
	.description(Chalk.blueBright("发布模块"))
	.action(Public);

Commander.parse(process.argv);
!Commander.args.length && Commander.help();