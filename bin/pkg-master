#!/usr/bin/env node

const Chalk = require("chalk");
const Commander = require("commander");

const Package = require("../package");
const Lang = require("../lib/lang");
const New = require("../lib/new");
const Publish = require("../lib/publish");
const { ACTION_TEXT } = require("../i18n");

Commander
	.usage(Chalk.yellowBright("<command> [option]"))
	.version(Package.version, "-v, --version");
Commander
	.command("lang")
	.alias("l")
	.description(Chalk.blueBright(ACTION_TEXT.lang))
	.action(Lang);
Commander
	.command("new")
	.alias("n")
	.description(Chalk.blueBright(ACTION_TEXT.new))
	.action(New);
Commander
	.command("publish")
	.alias("p")
	.description(Chalk.blueBright(ACTION_TEXT.publish))
	.action(Publish);

Commander.parse(process.argv);
!Commander.args.length && Commander.help();